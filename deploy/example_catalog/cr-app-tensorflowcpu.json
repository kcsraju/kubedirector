{
    "apiVersion": "kubedirector.bluedata.io/v1alpha1",
    "kind": "KubeDirectorApp",
    "metadata": {
        "name" : "tensorflowjupyter"
    },

    "spec" : {
        "systemdRequired": true,
        "config": {
            "role_services": [
                {
                    "service_ids": [
                        "ssh",
                        "jupyter-nb"
                    ],
                    "role_id": "controller"
                },
                {
                    "service_ids": [
                        "ssh"
                    ],
                    "role_id": "worker"
                }
            ],
            "selected_roles": [
                "controller",
                "worker"
            ]
        },
        "label": {
            "name": "Tensorflow distributed 1.9 on CPU with jupyter notebook & centos7x",
            "description": "TensorFlow1.9 CPU with centos7x"
        },
        "distro_id": "bluedata/tensorflow19cpu",
        "version": "1.8",
        "config_schema_version": 7,
        "services": [
            {
                "endpoint": {
                    "port": 22,
                    "is_dashboard": false
                },
                "id": "ssh",
                "label": {
                    "name": "SSH"
                }
            },
            {
                "endpoint": {
                    "url_scheme": "http",
                    "path": "/",
                    "is_dashboard": true,
                    "port": 8888
                },
                "id": "jupyter-nb",
                "label": {
                    "name": "Jupyter Notebook"
                }
            }
        ],
        "config_package": {
            "package_url" : "https://s3.amazonaws.com/bluek8s/kubedirector/tensorflowcpu/appconfig-1.8.tgz"
        },
        "roles": [
            {
                "image_repo_tag": "docker.io/bluedata/tensorflowcpu-jupyter:2.0",
                "cardinality": "1",
                "id": "controller"
            },
            {
                "image_repo_tag": "docker.io/bluedata/tensorflowcpu-jupyter:2.0",
                "cardinality": "0+",
                "id": "worker"
            }
        ]
    }
}
