{
    "apiVersion": "kubedirector.bluedata.io/v1alpha1",
    "kind": "KubeDirectorApp",
    "metadata": {
        "name" : "spark221e2"
    },

    "spec" : {
        "systemdRequired": true,
        "config": {
            "role_services": [
                {
                    "service_ids": [
                        "ssh",
                        "spark",
                        "spark-master",
                        "spark-worker"
                    ],
                    "role_id": "controller"
                },
                {
                    "service_ids": [
                        "ssh",
                        "spark-worker"
                    ],
                    "role_id": "worker"
                },
                {
                    "service_ids": [
                        "ssh",
                        "jupyter-nb"
                    ],
                    "role_id": "jupyter"
                }
            ],
            "selected_roles": [
                "controller",
                "worker",
                "jupyter"
            ]
        },
        "label": {
            "name": "Spark 2.2.1 on centos7x with Jupyter",
            "description": "Spark 2.2.1 with Jupyter"
        },
        "distro_id": "bluedata/spark221e2",
        "version": "2.6",
        "config_schema_version": 7,
        "services": [
            {
                "endpoint": {
                    "port": 22,
                    "is_dashboard": false
                },
                "id": "ssh",
                "label": {
                    "name": "SSH"
                }
            },
            {
                "endpoint": {
                    "url_scheme": "http",
                    "path": "/",
                    "is_dashboard": true,
                    "port": 8080
                },
                "id": "spark",
                "label": {
                    "name": "Spark master"
                }
            },
            {
                "endpoint": {
                    "url_scheme": "spark",
                    "is_dashboard": false,
                    "port": 7077
                },
                "id": "spark-master",
                "label": {
                    "name": "Spark master"
                }
            },
            {
                "endpoint": {
                    "url_scheme": "http",
                    "path": "/",
                    "is_dashboard": true,
                    "port": 8081
                },
                "id": "spark-worker",
                "label": {
                    "name": "Spark worker"
                }
            },
            {
                "endpoint": {
                    "url_scheme": "http",
                    "path": "/",
                    "is_dashboard": true,
                    "port": 8888
                },
                "id": "jupyter-nb",
                "label": {
                    "name": "Jupyter Notebook"
                }
            }
        ],
        "config_package":  {
            "package_url": "https://s3.amazonaws.com/bluek8s/kubedirector/spark221e2/appconfig-2.6.tgz"
        },
        "roles": [
            {
                "image_repo_tag": "docker.io/bluedata/sparkbase:2.0",
                "cardinality": "1",
                "id": "controller"
            },
            {
                "image_repo_tag": "docker.io/bluedata/sparkbase:2.0",
                "cardinality": "0+",
                "id": "worker"
            },
            {
                "image_repo_tag": "docker.io/bluedata/jupyter:2.2",
                "cardinality": "0+",
                "id": "jupyter"
            }
        ]
    }
}
